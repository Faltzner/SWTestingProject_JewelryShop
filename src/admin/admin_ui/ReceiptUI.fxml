<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="pane" prefHeight="750.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.181" xmlns:fx="http://javafx.com/fxml/1" fx:controller="admin.admin_ui.ReceiptUI">
   <children>
      <ImageView fitHeight="750.0" fitWidth="1200.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../pic/background.jpg" />
         </image>
      </ImageView>
      <TableView fx:id="tableView" layoutX="40.0" layoutY="175.0" prefHeight="430.0" prefWidth="1120.0">
        <columns>
          <TableColumn fx:id="receiptID" prefWidth="150.0" resizable="false" style="-fx-alignment: CENTER;" text="Receipt ID" />
          <TableColumn fx:id="totalPrice" prefWidth="150.0" resizable="false" style="-fx-alignment: CENTER;" text="Total Price" />
            <TableColumn fx:id="date" prefWidth="150.0" resizable="false" style="-fx-alignment: CENTER;" text="Date" />
            <TableColumn fx:id="buyOrderID" prefWidth="150.0" resizable="false" style="-fx-alignment: CENTER;" text="Buy Order ID" />
            <TableColumn prefWidth="150.0" resizable="false" />
            <TableColumn prefWidth="150.0" resizable="false" />
            <TableColumn prefWidth="145.0" resizable="false" />
            <TableColumn fx:id="view" prefWidth="60.0" resizable="false" style="-fx-alignment: CENTER;" />
        </columns>
      </TableView>
      <Label layoutX="200.0" layoutY="80.0" prefHeight="70.0" prefWidth="250.0" text="Receipt" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Arial Rounded MT Bold" size="56.0" />
         </font>
      </Label>
      <Button layoutX="40.0" layoutY="640.0" mnemonicParsing="false" onAction="#handleBackButton" prefHeight="70.0" prefWidth="150.0" style="-fx-background-radius: 50; -fx-background-color: linear-gradient(#ff5400, #be1d00);" text="BACK">
         <font>
            <Font name="Arial Rounded MT Bold" size="24.0" />
         </font>
      </Button>
      <Button layoutX="1010.0" layoutY="640.0" mnemonicParsing="false" onAction="#handleCreateButton" prefHeight="70.0" prefWidth="150.0" style="-fx-background-radius: 50; -fx-background-color: linear-gradient(#54ff00, #1dbe00);" text="CREATE">
         <font>
            <Font name="Arial Rounded MT Bold" size="24.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
