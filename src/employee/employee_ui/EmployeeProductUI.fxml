<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="pane" prefHeight="750.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.181" xmlns:fx="http://javafx.com/fxml/1" fx:controller="employee.employee_ui.EmployeeProductUI">
    <children>
      <ImageView fitHeight="750.0" fitWidth="1200.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../pic/background.jpg" />
         </image>
      </ImageView>
        <TableView fx:id="tableView" layoutX="40.0" layoutY="175.0" prefHeight="430.0" prefWidth="1120.0">
            <columns>
                <TableColumn fx:id="productID" prefWidth="145.0" resizable="false" style="-fx-alignment: CENTER;" text="Product ID" />
                <TableColumn fx:id="name" prefWidth="250.0" resizable="false" style="-fx-alignment: CENTER;" text="Name" />
            <TableColumn fx:id="type" prefWidth="145.0" resizable="false" style="-fx-alignment: CENTER;" text="Type" />
            <TableColumn fx:id="description" prefWidth="390.0" resizable="false" style="-fx-alignment: CENTER;" text="Description" />
            <TableColumn fx:id="rank" prefWidth="115.0" resizable="false" style="-fx-alignment: CENTER;" text="Rank" />
            <TableColumn fx:id="picture" prefWidth="60.0" resizable="false" style="-fx-alignment: CENTER;" text="Picture" />
            </columns>
        </TableView>
      <Label layoutX="200.0" layoutY="80.0" prefHeight="70.0" prefWidth="250.0" text="Product" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Arial Rounded MT Bold" size="56.0" />
         </font>
      </Label>
      <Button layoutX="40.0" layoutY="640.0" mnemonicParsing="false" onAction="#handleBackButton" prefHeight="70.0" prefWidth="150.0" style="-fx-background-radius: 50; -fx-background-color: linear-gradient(#ff5400, #be1d00);" text="BACK">
         <font>
            <Font name="Arial Rounded MT Bold" size="24.0" />
         </font>
      </Button>
    </children>
</AnchorPane>
